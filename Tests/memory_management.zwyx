#Test for memory management


_import:"utilities_lib"

BoxedInt~{el~int}

memCpy~{from~bytes to~bytes ;~{
        fromPtr~@CIter:from
        toPtr~@CIter:to
        num~int:from.count
        {num > 0}?*{
                toPtr.el:fromPtr.el
                fromPtr:{fromPtr+1}
                toPtr:{toPtr+1}
                num:{num-1}
        }
}}

MemArena~{
        data~bytes
        alloc~{numBytes~int ;~{
                chunkPtr~@BoxedInt:data
                chunkSize~int:{chunkPtr.el & 0x7FFF}
                {{chunkPtr.el & 0x8000} | {{chunkSize > 0} & {chunkSize < numBytes}}}?*{
                        chunkPtr:{chunkPtr+8+chunkSize}
                        chunkSize:{chunkPtr.el & 0x7FFF}
                }
                {{numBytes % 8} = 0}?{
                        chunkPtr.el:numBytes
                }^{
                        chunkPtr.el:{numBytes/8*8+8}
                }
                chunkPtr.el:{chunkPtr.el | 0x8000}
                chunkPtr+8
        }}
        free~{chunk~bytes ;~{
                chunkPtr~@BoxedInt:{chunk-8}
                chunkPtr.el:{chunkPtr.el & 0x7FFF}
                chunkPtr.el:{chunkPtr.el & 0x7FFF}
                
        }}
}

DynString~{
        b~bytes
        capacity~int:0
        memHandler~@MemArena
        write~{
		~WriteNF
		fn:@{
		        countin~int:data.count
		        {{b.count+countin} > capacity}?{
		                {capacity = 0}?{
		                        capacity:16
		                        b.count:0
		                }
		                {{b.count+countin} > capacity}?*{
		                        capacity:{capacity*2}
		                }
		                new_b~bytes:memHandler.alloc:capacity
		                new_b.count:b.count
		                memCpy.{to:new_b from:b ;}
		                {capacity > 16}?{
		                        memHandler.free:b
		                }
		                b:new_b
		        }
			memCpy.{to:{b+b.count} from:data ;}
			b.count:{b.count+countin}
		}
	}
}

buff~bytes.400

;~{
        buffPtr~@BoxedInt:@buff
        for.{end:104 step:8 do:@{
                buffPtr.el:0
                buffPtr:{buffPtr+8}
        } ; }
        mem~MemArena.{data:@buff}
        
        str1~DynString.{memHandler:@mem write:"Hello, World!"}
        str2~DynString.{memHandler:@mem write:"Chunk of some data!"}
        print.line:str1
        print.line:str2
        
        str1.write:" Yes, we meet again!"
        str2.write:" Bigger chunk of some data!"
        print.line:str1
        print.line:str2
        
        buffPtr:@buff
        for.{end:400 do:@{
                print.{d:{buffPtr.el % 256} s:" "}
                buffPtr:{buffPtr+1}
        } ; }
        print.endl
}

